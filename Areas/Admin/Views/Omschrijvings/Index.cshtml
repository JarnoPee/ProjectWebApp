@model IEnumerable<ProjectWebApp.Models.Omschrijving>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <br />
    @if (Model.Count() > 0)
    {
        <div class="backgroundWhiteBorder">
            <div class="container">
                <div class="card">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            Lijst Omschrijvingen
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="Create" class="btn btn-outline-info btn-sm">Creër een nieuw omschrijving</a>
                        </div>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <div class="row">
                                <div class="col-12 text-sm-center col-lg-6 text-lg-left">
                                    <h5><strong>@item.Titel</strong></h5>
                                    <p>@item.Beschrijving</p>
                                </div>
                                <div class="col-12 text-sm-center col-lg-5 text-lg-right row">
                                    <div style="margin-left: 50px">
                                        <a asp-action="Edit" asp-route-id="@item.OmschrijvingID" style="width: 30px;" class="btn btn-success form-control"><i class="far fa-edit"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.OmschrijvingID" style="width:30px;" class="btn btn-primary form-control"><i class="fas fa-info"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.OmschrijvingID" style="width: 30px;" class="btn btn-danger form-control"><i class="far fa-trash-alt"></i></a>
                                    </div>
                                </div>
                            </div>
                            <hr />
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div>Er zijn bestaan nog geen Omschrijvingen</div>
    }
</form>
