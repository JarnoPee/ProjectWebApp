
@model IEnumerable<ProjectWebApp.ViewModel.UserManagerViewModel>

@{ ViewData["Title"] = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lijst Gebruikers </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-plus"></i>&nbsp; Creër een nieuwe gebruiker</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(model => model.Naam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Voornaam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Land)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rol)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Voornaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Land)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol)
                </td>
                @*<td>
            <a asp-action="Edit" asp-route-id="@item.OpleidingID">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.OpleidingID">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.OpleidingID">Delete</a>
        </td>*@
            </tr>
            }
        </tbody>
    </table>
</div>
