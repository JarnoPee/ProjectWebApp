@model IEnumerable<ProjectWebApp.Models.Slot>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beschrijving)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beschrijving)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SlotID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SlotID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SlotID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
