@model ProjectWebApp.Models.OpgeslagenOpleidingen

<form method="post">
    <input type="hidden" asp-for="OpleidingId" />
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.Opleiding.Naam</h1>
                </div>
                <div class="col-12 col-md-6 text-md-right pt-4">
                    <span class="badge badge-success pt-2" style="height:30px;">@Model.Opleiding.Categorie.Naam</span>
                    <span class="badge badge-warning pt-2" style="height:30px;">@Model.Opleiding.Niveau.Naam</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">Federatie: @Model.Opleiding.Federatie.Naam</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">Prijs Opleiding: &euro;@Model.Opleiding.Prijs.ToString("0.00")</h5>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Opleiding.Omschrijving.Beschrijving)</p>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Opleiding.Algemeenheden.Beschrijving)</p>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Opleiding.Voorwaarden.Beschrijving)</p>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Opleiding.Slot.Beschrijving)</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2 text-primary"><h4>Aantal</h4></div>
                                <div class="col-10"><input class="form-control" asp-for="Count" /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Opleiding.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Terug naar alle opleidingen</a> <!--NOG VERANDEREN NAAR ALLE OPELEIDINGEN-->
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Toevoegen aan favorietenlijst</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
